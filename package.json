{
	"name": "chainlink-tezos-adapter-js",
	"version": "0.0.1",
	"description": "Chainlink External Adapter For Tezos",
	"author": {
		"name": "Rodrigo Quelhas",
		"email": "rodrigo_quelhas@outlook.pt"
	},
	"license": "MIT",
	"devDependencies": {
		"rollup": "2.28.2",
		"@rollup/plugin-typescript": "6.0.0",
		"@rollup/plugin-commonjs": "15.1.0",
		"@types/express": "4.17.8",
		"@types/jest": "26.0.14",
		"@types/morgan": "1.9.1",
		"@types/node": "14.11.5",
		"@types/winston": "2.4.4",
		"jest": "26.5.2",
		"ts-jest": "26.4.1",
		"supertest": "5.0.0",
		"@types/supertest": "2.0.10",
		"coveralls": "3.1.0",
		"typescript": "4.0.3",
		"tslib": "2.0.2",
		"prettier": "2.1.2",
		"eslint": "7.10.0",
		"@typescript-eslint/parser": "4.4.0",
		"@typescript-eslint/eslint-plugin": "4.4.0",
		"eslint-config-prettier": "6.12.0",
		"eslint-plugin-prettier": "3.1.4"
	},
	"scripts": {
		"build": "rollup -c",
		"watch": "rollup -cw",
		"test": "jest",
		"ci-test": "CI=true jest --collect-coverage --coverage && coveralls < coverage/lcov.info",
		"start": "node -r dotenv/config ./build/tezos-adapter.js",
		"prettier": "prettier --list-different 'src/**/*.{js,ts}' || (echo '\nPlease fix code formatting by running:\nnpm run prettier:fix\n'; exit 1)",
		"prettier:fix": "prettier --write 'src/**/*.{js,ts}'",
		"lint": "eslint '*/**/*.{js,ts}' --quiet --fix"
	},
	"dependencies": {
		"@taquito/taquito": "6.3.5-beta.0",
		"body-parser": "1.19.0",
		"cors": "2.8.5",
		"dotenv": "8.2.0",
		"express": "4.17.1",
		"morgan": "1.10.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix"
		]
	}
}
